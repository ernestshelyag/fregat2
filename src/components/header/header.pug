mixin header()
    +b.HEADER.header(class!=attributes.class)
        +e.wrp.wrp
            +e.logo-block
                +e.A.logo-link(href="/")
                    +e.IMG.img(src="img/logo-text.png")
                    +e.IMG.img_no-text(src="img/logo.png")
            +e.nav-block
                +b.header-top
                    +e.NAV.nav
                        +e.UL.list
                            +e.LI.item_phone
                                a(href="tel:84232025009") 8 (423) 202-50-09
                            each item in headerNavTop
                                +e.LI.item_link
                                    a(href=`${item.link}`)= item.text
                    +e.UL.list
                        each item in headerSocials
                            +e.LI.item_social
                                a(href=`${item.link}`)
                                    +icon(item.icon)
                +b.header-bottom
                    +e.NAV.nav
                        +e.UL.list
                            each item in headerNavBottom
                                +e.LI.item
                                    a(href=`${item.link}`)= item.text
                            +e.LI.item_phone
                                a(href="tel:84232025009") 8 (423) 202-50-09
            +b.DIV.burger
                +e.A.btn#burger-btn
                    +e.DIV.lines-block
                        +e.SPAN.mid-line
            +b.DIV.sidebar
                +e.DIV.cont
                    +e.UL.list
                        each item in sidebar
                            +e.li.item
                                +e.A.link(href=`${item.link}`)= item.text
